<resources>
    <!-- Base application theme. -->
    <style name="Theme.MarvelHeroes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="chipStyle">@style/Theme.SortChip</item>
    </style>

    <style name="Theme.SortChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/background_chip_sort</item>
        <item name="android:textColor">@color/background_chip_text_sort</item>
        <item name="checkedIconTint">@color/background_chip_text_sort</item>
    </style>
</resources>